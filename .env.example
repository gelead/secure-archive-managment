# Server Configuration
SERVER_PORT=4000

# MongoDB Configuration
# Full connection string with database name
MONGO_URI=mongodb://127.0.0.1:27017/secure_archive
# Optional: Database name (will be extracted from MONGO_URI if not provided)
MONGO_DB=secure_archive

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (32 characters for AES-256)
ENCRYPTION_KEY=01234567890123456789012345678901
ENCRYPTION_IV=0123456789012345

# Email Configuration (for MFA OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
